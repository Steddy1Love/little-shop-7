<%= render 'shared/merchant_navbar' %>
<div class="row">
    <div class="col">
      <h1 class="main_headings"> All Coupons for <%= @merchant.name %></h1>
        <% @coupons.each do |coupon| %>
          <p><%= link_to "#{coupon.name}", merchant_coupon_path(@merchant.id, coupon.id) %>
          <% if coupon.percent_off != nil %>
            <%= coupon.percent_off %>&#37 off</p>
          <% else %>
            <%= number_to_currency(coupon.dollar_off.to_f / 100.00) %></p><br>
          <% end %>
        <% end %>
    </div>
  </div>
</div>