<%= render 'shared/merchant_navbar' %>
<div class="row">
    <div class="col">
      <h1 class="main_headings"> All Coupons for <%= @merchant.name %></h1>
      <h2><%= link_to 'Create New Coupon', new_merchant_coupon_path %></h2>
        <% @coupons.each do |coupon| %>
          <% if coupon.percent_or_dollar == 0 && coupon.status == 1 %>
            <p><%= link_to "#{coupon.name}", merchant_coupon_path(@merchant.id, coupon.id) %>
            <%= coupon.percent_off %>&#37 off</p>
          <% elsif coupon.status == 1 %>
            <p><%= link_to "#{coupon.name}", merchant_coupon_path(@merchant.id, coupon.id) %>
            <%= number_to_currency(coupon.amount_off.to_f / 100.00) %></p><br>
          <% else %>
            <h3>Inactive Coupons:</h3>
            <p><%= link_to "#{coupon.name}", merchant_coupon_path(@merchant.id, coupon.id) %>
          <% end %>
        <% end %>
    </div>
  </div>
</div>